{
  "name": "backend",
  "version": "0.0.1",
  "description": "Backend of Pipe Timer",
  "author": "Yi Doyoon",
  "private": true,
  "license": "GPL-3.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build:dev": "cross-env NODE_ENV=development nest build",
    "start:dev:db": "docker compose --env-file=./env/.development.env up -d mysql redis",
    "stop:dev:db": "docker compose --env-file=./env/.development.env down mysql redis",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:compose": "docker compose --profile=local --env-file=./env/.development.env up",
    "start:test:db": "docker compose --env-file=./env/.development.env up -d mysql-test redis-test",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "start:prod:pm2": "pm2 start pnpm --name \"pipe-timer\" -- run start:production",
    "test": "jest --no-cache",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env TEST=true NODE_ENV=development jest --config test/jest-e2e.json --detectOpenHandles",
    "typeorm": "typeorm-ts-node-commonjs -d src/db/orm.config.ts",
    "format": "prettier --write \\\"src/**/*.ts\\\" \\\"test/**/*.ts\\\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "migration:create": "typeorm-ts-node-commonjs migration:create src/migrations/table",
    "migration:generate": "pnpm typeorm migration:generate src/migrations/table",
    "migration:show": "pnpm typeorm migration:show",
    "migration:run": "pnpm typeorm migration:run",
    "migration:revert": "pnpm typeorm migration:revert"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.1.2",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.2",
    "@nestjs/cqrs": "^10.0.3",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/mapped-types": "^2.0.2",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.1.2",
    "@nestjs/platform-socket.io": "^10.2.3",
    "@nestjs/schedule": "^3.0.1",
    "@nestjs/swagger": "^7.1.2",
    "@nestjs/terminus": "^10.0.1",
    "@nestjs/throttler": "^4.2.1",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.2.3",
    "@node-rs/argon2": "^1.5.2",
    "@sendgrid/helpers": "^7.7.0",
    "@sendgrid/mail": "^7.7.0",
    "axios": "1.3.1",
    "chance": "^1.1.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "connect-redis": "^6.1.3",
    "cookie": "^0.5.0",
    "cookie-parser": "^1.4.6",
    "cron": "^2.4.1",
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express-basic-auth": "^1.2.1",
    "express-session": "^1.17.3",
    "form-data": "^4.0.0",
    "helmet": "^7.0.0",
    "identicon.js": "^2.3.3",
    "ioredis": "^5.2.4",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.1",
    "leo-profanity": "^1.7.0",
    "mailgun.js": "^10.2.1",
    "mysql2": "^2.3.3",
    "nest-winston": "^1.9.4",
    "nodemailer": "^6.8.0",
    "passport": "^0.6.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "socket.io": "^4.7.2",
    "typeorm": "^0.3.10",
    "ulid": "^2.3.0",
    "uuid": "^9.0.0",
    "webpack": "5.0.0",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/cli": "^10.1.10",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.1.2",
    "@types/chance": "^1.1.3",
    "@types/cookie": "^0.5.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.5",
    "@types/jest": "29.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/leo-profanity": "^1.5.0",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.6",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "29.0.0",
    "node-mocks-http": "^1.12.2",
    "pm2": "^5.2.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../src/$1",
      "^@Helper/(.*)$": "<rootDir>/../src/common/helper/$1"
    }
  }
}
